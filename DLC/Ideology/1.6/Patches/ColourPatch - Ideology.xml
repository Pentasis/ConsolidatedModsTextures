<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ideology</li>
		</mods>
		<match Class="XmlExtensions.UseSettings">
			<modId>cucumpear.stonetweaksvanilla</modId>
			<keys>
				<li>Col1</li>
				<li>Col2</li>
				<li>Col3</li>
				<li>Col4</li>
				<li>Col5</li>
			</keys>
			<defaultValues>
				<li>87,71,63</li>
				<li>75,84,92</li>
				<li>232,225,202</li>
				<li>64,64,64</li>
				<li>255,255,255</li>
			</defaultValues>
			<apply>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_TotemicSandstone"]/color</xpath>
				  <value><color>({Col1})</color></value>
				</li>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_SpikecoreSandstone"]/color</xpath>
				  <value><color>({Col1})</color></value>
				</li>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_MorbidSandstone"]/color</xpath>
				  <value><color>({Col1})</color></value>
				</li>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_SpikecoreGranite"]/color</xpath>
				  <value><color>({Col2})</color></value>
				</li>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_TotemicGranite"]/color</xpath>
				  <value><color>({Col2})</color></value>
				</li>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_MorbidGranite"]/color</xpath>
				  <value><color>({Col2})</color></value>
				</li>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_SpikecoreLimestone"]/color</xpath>
				  <value><color>({Col3})</color></value>
				</li>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_TotemicLimestone"]/color</xpath>
				  <value><color>({Col3})</color></value>
				</li>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_MorbidLimestone"]/color</xpath>
				  <value><color>({Col3})</color></value>
				</li>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_SpikecoreSlate"]/color</xpath>
				  <value><color>({Col4})</color></value>
				</li>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_TotemicSlate"]/color</xpath>
				  <value><color>({Col4})</color></value>
				</li>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_MorbidSlate"]/color</xpath>
				  <value><color>({Col4})</color></value>
				</li>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_SpikecoreMarble"]/color</xpath>
				  <value><color>({Col5})</color></value>
				</li>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_TotemicMarble"]/color</xpath>
				  <value><color>({Col5})</color></value>
				</li>
				<li Class="PatchOperationReplace">
				  <xpath>*/TerrainDef[defName = "Tile_MorbidMarble"]/color</xpath>
				  <value><color>({Col5})</color></value>
				</li>
			</apply>
		</match>
	</Operation>
		
</Patch>